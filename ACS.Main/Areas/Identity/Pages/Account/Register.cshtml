@page
@model RegisterModel
@{
    ViewData["Title"] = "تسجيل مستخدم جديد";
}

<style>
    .bg-register-image {
        background: url('/Images/lisco3.jpg');
        background-position: center;
        background-size: cover;
    }
</style>

<div class="container">
    <div class="card o-hidden border-0 shadow-lg my-5">
        <div class="card-body p-0">
            <div class="row">
                <div class="col-lg-5 d-none d-lg-block bg-register-image"></div>
                <div class="col-lg-7">
                    <div class="p-5 text-right">
                        <div class="text-center">
                            <h1 class="h4 text-gray-900 mb-4">!تسجيل مستخدم جديد</h1>
                        </div>
                        <form class="user" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                            <div class="form-group">
                                <label asp-for="Input.FileNumber"></label>
                                <input asp-for="Input.FileNumber" class="form-control" />
                                <span asp-validation-for="Input.FileNumber" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Input.Password"></label>
                                <input asp-for="Input.Password" class="form-control" />
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Input.ConfirmPassword"></label>
                                <input asp-for="Input.ConfirmPassword" class="form-control" />
                                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                            </div>
                            <button type="submit" class="btn btn-primary btn-user btn-block">تسجيل</button>
                            <hr>
                        </form>
                        <hr>
                        <div class="text-center">
                            <p>
                                <a class="" href="forgot-password.html">نسيت كلمة المرور؟</a>
                            </p>
                            <p>
                                <a asp-page="./Login">!لديك حساب بالفعل؟  دخول</a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

