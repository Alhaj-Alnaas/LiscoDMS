            </div>
            @* ---------------------------------------------------------- *@
            <ul class="messages">
                @foreach (var item in Model)
                {
                    <li class="message unread">
                        @*<input value="@item.Id" type="checkbox" style="right: 0; top: 40%; position: absolute; z-index: 1; width:20px; height:20px;" />*@
                        <a asp-controller="Messages" asp-action="EditDraft" asp-route-id="@item.Id">
                            <div class="actions">

                            </div>
                            <div class="header">
                                <span class="date">
                                    <span class="fa fa-paper-clip"></span> @Html.DisplayFor(modelItem => item.CreatedOn)
                                </span>
                                <span class="from"> أنشأت بواسطة/ @Html.DisplayFor(modelItem => item.CreatedBy.FullName)</span>
                            </div>
                            <div class="title">
                                @Html.DisplayFor(modelItem => item.Title)
                            </div>
                            <div class="description">
                                @Html.DisplayFor(modelItem => item.OriginalBody)
                            </div>
                        </a>
                    </li>
                }
            </ul>
