@{
    ViewData["Title"] = "لوحة المعلومات";
}
<style>
    .card-counter {
        box-shadow: 2px 2px 10px #DADADA;
        margin: 5px;
        padding: 20px 10px;
        background-color: #fff;
        height: 150px;
        border-radius: 5px;
        transition: .3s linear all;
    }

        .card-counter:hover {
            box-shadow: 20px 20px 45px #DADADA;
            transition: .3s linear all;
            cursor: pointer;
        }

            .card-counter:hover i {
                opacity: 0.6;
                transition: .3s linear all;
            }

        .card-counter.primary {
            background-color: #007bff;
            color: #FFF;
        }

        .card-counter.danger {
            background-color: #ef5350;
            color: #FFF;
        }

        .card-counter.success {
            background-color: #66bb6a;
            color: #FFF;
        }

        .card-counter.info {
            background-color: #26c6da;
            color: #FFF;
        }

        .card-counter i {
            font-size: 6em;
            opacity: 0.2;
        }

        .card-counter .count-numbers {
            position: absolute;
            right: 35px;
            top: 80px;
            font-size: 32px;
            display: block;
        }

        .card-counter .count-name {
            position: absolute;
            right: 40px;
            top: 120px;
            text-transform: capitalize;
            opacity: 0.7;
            display: block;
            font-size: 18px;
        }
</style>
<div class="container mt-5">
    <div class="row pr-5 pl-5">
        <div class="col-md-6">
            <div class="card-counter primary">
                <i>@ViewBag.UnreplayedInbox</i>
                @*<span class="count-numbers">@ViewBag.UnreplayedInbox</span>*@
                <span class="count-name">واردة لم يرد عليها</span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card-counter danger">
                <i>@ViewBag.UnreplayedOutbox</i>
                @*<span class="count-numbers">@ViewBag.UnreplayedOutbox</span>*@
                <span class="count-name">صادرة لم يرد عليها</span>
            </div>
        </div>
    </div>
    <div class="row pr-5 pl-5">
        <div class="col-md-6">
            <div class="card-counter success">
                <i class="fa fa-inbox fa-fw"></i>
                <span class="count-numbers">6875</span>
                <span class="count-name">المراسلات الواردة</span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card-counter info">
                <i class="fas fa-paper-plane fa-fw"></i>
                <span class="count-numbers">35</span>
                <span class="count-name">المراسلات الصادرة</span>
            </div>
        </div>
    </div>
</div>